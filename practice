#include<iostream>
#include<string>
using namespace std;
//设计一个学生类，属性有姓名和学号
//可以给姓名和学号赋值，也可也显示学生的姓名和学号
class student
{
public:
	//属性
	string m_name;//姓名
		int  m_id;

		//行为
	void showstudent()
	{
		cout << "姓名： " << m_name << "  学号： " << m_id<<endl;
	}

};
int main()
{
	//创建一个具体的学生，实例化对象
	student s1;
	s1.m_name = "张三";
	s1.m_id = 1;
	s1.showstudent();
}
